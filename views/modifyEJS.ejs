<!doctype html>
<html>
	<head>
		<meta name="viewport" content="width=device-width, initial-scale=1.0" charset="utf-8">
		<title>Cocoa Inn</title>
		<link href="/public/css.css" rel="stylesheet" type="text/css">
	</head>

	<body style="background-color: black">
		<div class="detailsPage">
			<div class="row1" style="color: wheat">
				<div class="col-2"><a href="index.html" style="font-size: 35pt; color: beige">Home</a></div>
				<div class="col-2"><a href="Reservation.html" style="font-size: 35pt; color: beige">Reserve</a></div>
				<div class="col-2"><h1 style="text-align: center">Dine</h1></div>
				<div class="col-2"><h1 style="text-align: center">Spa</h1></div>
				<div class="col-2"><h1 style="text-align: center">Golf</h1></div>
				<div class="col-2"><h1 style="text-align: center">Contact</h1></div>
			</div>
			
			<div class="row2" style="color: wheat">
				<div class="col-4">
					<h2 style="text-align: center; font-size: 30pt">Your Stay</h2>
					<br>
					<h3 style="text-align: center; font-size: 20pt">Check In: <%= reservation.checkIn %></h3>
					<br>
					<h3 style="text-align: center; font-size: 20pt">Check Out: <%= reservation.checkOut %></h3>
					<br>
					<h3 style="text-align: center; font-size: 20pt">Adults: <%= reservation.adults %></h3>
					<br>
					<h3 style="text-align: center; font-size: 20pt">Children: <%= reservation.children %></h3>
				</div>

				<div class="col-8" style="height: 600px; overflow-x: hidden; overflow-y: auto; color: wheat">
					<h2 style="text-align: center; font-size: 30pt">Your Rooms</h2>
					<% for (let x = 0; x < rooms.length; x++) { %>
						<div class="col-4">
							<h2 style="text-align: center; font-size: 20pt"><%= rooms[x].roomName %></h2>
							<br>
							<h2 style="text-align: center; font-size: 20pt">Beds: <%= rooms[x].numBeds %></h2>
							<br>
							<h2 style="text-align: center; font-size: 20pt">Occupancy: <%= rooms[x].maxOccupancy %></h2>
							<br>
							<p style="text-align: center; font-size: 15pt"><%= rooms[x].description %></p>
						</div>
						<div class="col-8">
							<img src="<%= rooms[x].image %>" style="width: 100%; height: auto; margin-left: auto; margin-right: auto; display: block">
						</div>
					<% } %>
				</div>
			</div>
			<div class="row3" style="color: wheat">
					<div class="col-4">
					<h2 style="text-align: center; font-size: 30pt">Service</h2>
					<form method="post" action="roomService.html">
						<button type="submit" style="width: 100%; background-color: wheat; padding: 16px 32px">Room Service</button>
						<br>
						<br>
					<button type="submit" style="width: 100%; background-color: wheat; padding: 16px 32px">Spa reservation</button>
						<br>
						<br>
					<button type="submit" style="width: 100%; background-color: wheat; padding: 16px 32px">Dining Reservation</button>						
					</form>					
					<h2 style="text-align: center; font-size: 30pt">Modify</h2>
					<form method="post" action="modifyDate.html">
						<input type="hidden" name="confirmationNumber" class="confirmationNumber" value="<%= reservation.confirmationNumber %>">
						<button type="submit" style="width: 100%; background-color: wheat; padding: 16px 32px">Change Check In/Out</button>
					</form>
					<br>
					<form method="post" action="add-RemoveRoom.html">
						<input type="hidden">
						<button type="submit" style="width: 100%; background-color: wheat; padding: 16px 32px">Add/Remove Room</button>
					</form>
					<br>
					<form method="post" action="changeRoom.html">
						<input type="hidden">
						<button type="submit" style="width: 100%; background-color: wheat; padding: 16px 32px">Change Room</button>
					</form>
					<br>
					<form method="post" action="add-removeGuest.html">
						<input type="hidden">
						<button type="submit" style="width: 100%; background-color: wheat; padding: 16px 32px">Add/Remove Guest</button>
					</form>
					<br>
					<form method="post" action="cancel.html">
						<input type="hidden" name="confirmationNumber" class="confirmationNumber" value="<%= reservation.confirmationNumber %>">
						<button type="submit" style="width: 100%; background-color:#DD8284; padding: 16px 32px">Cancel Reservation</button>
					</form>
				</div>
				
				<div class="col-8">
					<h1 style="text-align: center; font-size: 30pt">Have questions or requests?</h1>
					<br>
					<p style="text-align: center; font-size: 20pt">Call us: 717-123-4567</p>
					<br>
					<p style="text-align: center; font-size: 20pt">Or send us an email.</p>
					<form method="post" action="sendEmail.html">
						<input name="message" class="message" type="text" style="width: 100%; height: 400px">
						<button type="submit" style="width: 100%; padding: 16px 32px; background-color: wheat">Send</button>
					</form>
				</div>
			</div>
		</div>
	</body>
</html>