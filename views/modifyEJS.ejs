<!doctype html>
<html>
	<head>
		<meta name="viewport" content="width=device-width, initial-scale=1.0" charset="utf-8">
		<title>Cocoa Inn</title>
		<link href="/public/css.css" rel="stylesheet" type="text/css">
	</head>

	<body style="background-color: #E8E5D6">
		<div class="detailsPage">
			<div class="row1">
				<div class="col-12">
					<h1 style="text-align: center; font-size: 50pt; color: saddlebrown">The Cocoa Inn</h1>
				</div>
				<div class="col-12">
					<div class="col-2">
						<form method="get" action="index.html">
							<button type="submit" style="width:100%; padding: 16px; background-color: ivory; font-size: 20pt">Home</button>
						</form>
					</div>
					<div class="col-2">
						<form method="get" action="Reservation.html">
							<button type="submit" style="width:100%; padding: 16px; background-color: ivory; font-size: 20pt">Reserve</button>
						</form>
					</div>
					<div class="col-2">
						<form method="get" action="dine.html">
							<button type="submit" style="width:100%; padding: 16px; background-color: ivory; font-size: 20pt">Dine</button>
						</form>
					</div>
					<div class="col-2">
						<form method="get" action="spa.html">
							<button type="submit" style="width:100%; padding: 16px; background-color: ivory; font-size: 20pt">Spa</button>
						</form>
					</div>
					<div class="col-2">
						<form method="get" action="winery.html">
							<button type="submit" style="width:100%; padding: 16px; background-color: ivory; font-size: 20pt">Winery</button>
						</form>
					</div>
					<div class="col-2">
						<form method="get" action="contact.html">
							<button type="submit" style="width:100%; padding: 16px; background-color: ivory; font-size: 20pt">Contact Us</button>
						</form>
					</div>				
				</div>
			</div>
			
			<div class="row2">
				<div class="col-4" style="background-color: ivory">
					<h2 style="text-align: center; font-size: 30pt">Welcome, <%= reservation.firstName %>!</h2>
					<br>
					<h3 style="text-align: center; font-size: 20pt">Check In: <%= reservation.checkIn %> @ <%= policy.checkInTime %></h3>
					<br>
					<h3 style="text-align: center; font-size: 20pt">Check Out: <%= reservation.checkOut %> @ <%= policy.checkOutTime %></h3>
					<br>
					<h3 style="text-align: center; font-size: 20pt">Adults: <%= reservation.adults %></h3>
					<br>
					<h3 style="text-align: center; font-size: 20pt">Children: <%= reservation.children %></h3>
					<br>
					<h3 style="text-align: center; font-size: 20pt">Balance: $<%= reservation.price %></h3>
					<div class="col-12">
						<div class="col-4"></div>
						<div class="col-4">
							<form method="post" action="invoice.html">
								<input type="hidden" name="confirmationNumber" class="confirmationNumber" value="<%= reservation.confirmationNumber %>">
								<button type="submit" style="width:100%; padding:16px; background-color: wheat">View Invoice</button>
							</form>							
						</div>
						<div class="col-4"></div>
					</div>
				</div>

				<div class="col-8" style="height: 770px; overflow-x: hidden; overflow-y: auto">
					<h2 style="text-align: center; font-size: 30pt">Your Rooms</h2>
					<% for (let x = 0; x < rooms.length; x++) { %>
						<% if (x % 2 == 0){ %>
							<div class="col-12" style="background-color: ivory">
						<% } else{ %>
								<div class="col-12" style="background-color: #E8E5D6">
						<% } %>
							<div class="col-4">
								<h2 style="text-align: center; font-size: 20pt"><%= rooms[x].roomName %></h2>
								<br>
								<h2 style="text-align: center; font-size: 20pt">Beds: <%= rooms[x].numBeds %></h2>
								<br>
								<h2 style="text-align: center; font-size: 20pt">Occupancy: <%= rooms[x].maxOccupancy %></h2>
								<br>
								<p style="text-align: center; font-size: 15pt"><%= rooms[x].description %></p>
							</div>
							<div class="col-8">
								<img src="<%= rooms[x].image %>" style="width: 100%; height: auto; margin-left: auto; margin-right: auto; display: block">
							</div>							
						</div>
					<% } %>
				</div>
			</div>
			
			<div class="row3">
				<div class="col-12">
					<div class="col-4" style="background-color: ivory">
						<div class="col-12">
							<h2 style="text-align: center; font-size: 25pt">Service</h2>
						</div>
						<div class="col-12">
							<div class="col-3"></div>
							<div class="col-6">
								<button type="button" style="width: 100%; background-color: wheat; padding: 16px 32px">Room Service</button>
							</div>
							<div class="col-3"></div>
						</div>
						
						<div class="col-12">
							<div class="col-3"></div>
							<div class="col-6">
								<button type="button" style="width: 100%; background-color: wheat; padding: 16px 32px">Spa Reservation</button>
							</div>
							<div class="col-3"></div>
						</div>
						
						<div class="col-12">
							<div class="col-3"></div>
							<div class="col-6">
								<button type="button" style="width: 100%; background-color: wheat; padding: 16px 32px">Dining Reservation</button>
							</div>
							<div class="col-3"></div>
						</div>
						
						<div class="col-12">
							<h2 style="text-align: center; font-size: 25pt">Modify</h2>							
						</div>
						<div class="col-12">
							<div class="col-3"></div>
							<div class="col-6">
								<form method="post" action="modifyDate.html">
									<input type="hidden" name="confirmationNumber" class="confirmationNumber" value="<%= reservation.confirmationNumber %>">
									<button type="submit" style="width: 100%; background-color: wheat; padding: 16px 32px">Change Check In/Out</button>
								</form>								
							</div>
							<div class="col-3"></div>
						</div>
						
						<div class="col-12">
							<div class="col-3"></div>
							<div class="col-6">
								<form method="post" action="modifyRoom.html">
									<input type="hidden" name="confirmationNumber" class="confirmationNumber" value="<%= reservation.confirmationNumber %>">
									<button type="submit" style="width: 100%; background-color: wheat; padding: 16px 32px">Modify Room</button>
								</form>								
							</div>
							<div class="col-3"></div>
						</div>
						<div class="col-12">
							<div class="col-3"></div>
							<div class="col-6">
								<form method="post" action="add-removeGuest.html">
									<input type="hidden">
									<button type="submit" style="width: 100%; background-color: wheat; padding: 16px 32px">Add/Remove Guest</button>
								</form>								
							</div>
							<div class="col-3"></div>
						</div>
						<div class="col-12">
							<div class="col-3"></div>
							<div class="col-6">
								<form method="post" action="cancel.html">
									<input type="hidden" name="confirmationNumber" class="confirmationNumber" value="<%= reservation.confirmationNumber %>">
									<button type="submit" style="width: 100%; background-color:#DD8284; padding: 16px 32px">Cancel Reservation</button>
								</form>								
							</div>
							<div class="col-3"></div>
						</div>
					</div>
					
					<div class="col-8">
						<br><br><br><br><br><br><br><br>
						<h1 style="text-align: center; font-size: 30pt">Have questions or requests?</h1>
						<br>
						<p style="text-align: center; font-size: 20pt">Call us: 717-123-4567</p>
						<br>
						<p style="text-align: center; font-size: 20pt">Or send us a chat.</p>
						<div class="col-12">
							<div class="col-2"></div>
							<div class="col-8" style="height: 280px; overflow-x: hidden; overflow-y: auto; background-color: ivory">
								<% for (let x = 0; x < reservation.notes.length; x++) { %>
									<p><%= reservation.notes[x] %></p>
								<% } %>
							</div>
							<div class="col-2"></div>
						</div>
						<form method="post" action="sendChat.html">
							<div class="col-12">
								<div class="col-2"></div>
								<div class="col-8">
									<input name="message" class="message" type="text" style="width: 100%; padding:20px">
									<input name="firstName" class="firstName" type="hidden" value="<%= reservation.firstName %>">
									<input name="lastName" class="lastName" type="hidden" value="<%= reservation.lastName %>">
									<input name="confirmationNumber" class="confirmationNumber" type="hidden" value="<%= reservation.confirmationNumber %>">
								</div>
								<div class="col-2"></div>
							</div>
							<div class="col-12">
								<div class="col-4"></div>
								<div class="col-4">
									<button type="submit" style="width: 100%; padding: 16px 32px; background-color: wheat">Send</button>
								</div>
								<div class="col-4"></div>
							</div>
						</form>
					</div>				
				</div>
			</div>
		</div>
	</body>
</html>