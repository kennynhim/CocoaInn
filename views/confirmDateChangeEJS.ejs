<!doctype html>
<html>
	<head>
		<meta name="viewport" content="width=device-width, initial-scale=1.0" charset="utf-8">
		<title>Cocoa Inn</title>
		<link href="/public/css.css" rel="stylesheet" type="text/css">
	</head>

	<body style="background-color: black">
		<div class="confirmDateChangePage">
			<div class="row1" style="color: beige">
				<div class="col-2"><a href="index.html" style="font-size: 35pt; color: beige">Home</a></div>
				<div class="col-2"><a href="Reservation.html" style="font-size: 35pt; color: beige">Reserve</a></div>
				<div class="col-2"><h1 style="text-align: center">Dine</h1></div>
				<div class="col-2"><h1 style="text-align: center">Spa</h1></div>
				<div class="col-2"><h1 style="text-align: center">Golf</h1></div>
				<div class="col-2"><h1 style="text-align: center">Contact</h1></div>
			</div>
			
			<div class="row2" style="color: wheat">
				<div class="col-4">
					<h2 style="text-align: center; font-size: 30pt">Your Stay</h2>
					<br>
					<h3 style="text-align: center; font-size: 20pt">Check In: <%= reservation.checkIn %></h3>
					<br>
					<h3 style="text-align: center; font-size: 20pt">Check Out: <%= reservation.checkOut %></h3>
					<br>
					<h3 style="text-align: center; font-size: 20pt">Adults: <%= reservation.adults %></h3>
					<br>
					<h3 style="text-align: center; font-size: 20pt">Children: <%= reservation.children %></h3>
				</div>
				<div class="col-8">
					<% if (priceChange > 0){ %>
						<h2 style="text-align: center; font-size:30pt">An additional $<%= priceChange %> will be charged to your account.</h2>
					<% } else if (priceChange < 0){ %>
						<h2 style="text-align: center; font-size:30pt">You will be refunded $<%= priceChange %>.</h2>
					<% } else{ %>
						<h2 style="text-align: center; font-size:30pt">No charges will be made to your account.</h2>
					<% } %>
					<br>
					<br>
					<h2 style="text-align: center; font-size:30pt">Continue with the modification?</h2>
					<div class="col-5">
						<form method="post" action="reservationDetails.html">
							<input type="hidden" name="confirmationNumber" class="confirmationNumber" value="<%= reservation.confirmationNumber %>">
							<button type="submit" style="background-color: #AFA5A5; width:100%; padding: 16px 32px; text-align: center; font-size: 15pt">Back</button>
						</form>
					</div>
					<div class="col-2">
					</div>
					<div class="col-5">
						<form method="post" action="changeDateRequested.html">
							<input type="hidden" name="confirmationNumber" class="confirmationNumber" value="<%= reservation.confirmationNumber %>">
							<input type="hidden" name="checkIn" class="checkIn" value="<%= newCheckIn %>">
							<input type="hidden" name="checkOut" class="checkOut" value="<%= newCheckOut %>">
							<input type="hidden" name="price" class="price" value="<%= newPrice %>">
							<button type="submit" style="background-color: wheat; width:100%; padding: 16px 32px; text-align: center; font-size: 15pt">Continue</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</body>
</html>