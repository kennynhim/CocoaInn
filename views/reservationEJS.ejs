<!doctype html>
<html>
<head>
<meta charset="utf-8">
<title>Reservations</title>
<link href="/public/css.css" rel="stylesheet" type="text/css">
</head>

<body style="background-color: black">
	<div class="reservationsPage">
			<div class="row1" style="color: beige">
				<div class="col-2"><a href="index.html" style="font-size: 35pt; color: beige">Home</a></div>
				<div class="col-2"><a href="Reservation.html" style="font-size: 35pt; color: beige">Reserve</a></div>
				<div class="col-2"><h1 style="text-align: center">Dine</h1></div>
				<div class="col-2"><h1 style="text-align: center">Spa</h1></div>
				<div class="col-2"><h1 style="text-align: center">Golf</h1></div>
				<div class="col-2"><h1 style="text-align: center">Contact</h1></div>
			</div>
		
			<div class="row2" style="color: beige">
				<div class="col-12">
					<form method="post" action="reservationDetails.html" style="padding-left: 400px">
						<input name="confirmationNumber" class="confirmationNumber" type="text" placeholder="Reservation Confirmation Number" style="width:50%; padding: 12px 20px; text-align: center">
						<button type="submit" style="padding: 12px 20px; background-color: wheat">Search</button>
					</form>
				</div>
			</div>
		
		<div class="row3" style="color: beige">
			<div class="col-2">
				<% if (numRooms == 0 || bInit){ %>
					<form class="reservationInfo" action="Reservation.html" method="post">
						<h2 style="text-align: center; font-size: 30pt">Your Stay</h2>
						<label for="checkIn" style="font-size: 20pt">Check In:</label>
						<br>
						<input class="checkIn" type="date" name="checkIn" value="<%= checkIn %>" min="<%= checkIn %>" required>
						<br>
						<br>
						<br>
						<br>
						<br>
						<label for="checkOut" style ="font-size:20pt">Check Out:</label>
						<br>
						<input class="checkOut" type="date" name="checkOut" value="<%= checkOut %>" min=<%= checkOut %> required>
						<br>
						<br>
						<br>
						<br>
						<br>
						<label for="numAdults" style="font-size: 20pt">Adults</label>
						<br>
						<input class="numAdults" type="number" placeholder="Adults" name ="numAdults" value="<%= numAdults %>" min="1" required>
						<br>
						<br>
						<br>
						<br>
						<br>
						<label for="numChildren">Children</label>
						<br>
						<input class="numChildren" type="number" placeholder="Children" name="numChildren" value="<%= numChildren %>" min="0" required>
						<br>
						<br>
						<button onclick="console.log("hi")" class="bookButton" type="submit">Search Rooms</button>
					</form>
				<% } else{ %>
					<h3 style="text-align: center; font-size: 20pt">Check In: <%= checkIn %></h3>
					<br>
					<h3 style="text-align: center; font-size: 20pt">Check Out: <%= checkOut %></h3>
					<br>
					<h3 style="text-align: center; font-size: 20pt">Adults: <%= numAdults %></h3>
					<br>
					<h3 style="text-align: center; font-size: 20pt">Children: <%= numChildren %></h3>
				<% } %>
			</div>
			
			<div class="col-10" id = "availRoomList" style="height: 650px; overflow-x: hidden; overflow-y: auto">
				<% if (bInit) { %>
					<% for(var x = 0; x < rooms.length; x++) { %>
						<div class="col-5"><br><br><br><br><br><h1 style="text-align: center"><%= rooms[x].roomName %></h1><p style = "text-align:center">Beds: <%= rooms[x].numBeds %><br>Occupancy: <%= rooms[x].maxOccupancy %><br><%= rooms[x].description %></p></div>
						<div class="col-5"><img src="<%= rooms[x].image %>" style="width: 100%; height: auto; margin-left: auto; margin-right: auto; display: block"></div>
						<div class="col-2"><br><br><br><br><br><h2 style="text-align: center">$<%= rooms[x].price %></h2><p style="text-align: center">(per night)</p></div>
					<% } %>
				<% } else { %>
						<% for(var x = 0; x < rooms.length; x++) { %>
							<div class="col-5"><br><br><br><br><br><h1 style="text-align: center"><%= rooms[x].roomName %></h1><p style = "text-align:center">Beds: <%= rooms[x].numBeds %><br>Occupancy: <%= rooms[x].maxOccupancy %><br><%= rooms[x].description %></p></div>
							<div class="col-5"><img src="<%= rooms[x].image %>" style="width: 100%; height: auto; margin-left: auto; margin-right: auto; display: block"></div>
							<div class="col-2"><br><br><br><br><br><h2 style="text-align: center">$<%= rooms[x].price %></h2><p style="text-align: center">(per night)</p>
								<form action="booking.html" method="post">
									<input type="hidden" name="checkInFinal" class="checkInFinal" value="<%= checkIn %>">
									<input type="hidden" name="checkOutFinal" class="checkOutFinal" value="<%= checkOut %>">
									<input type="hidden" name="numAdultsFinal" class="numAdultsFinal" value="<%= numAdults %>">
									<input type="hidden" name="numChildrenFinal" class="numChildrenFinal" value="<%= numChildren %>">
									<input type="hidden" name="roomNum" class="roomNumFinal" value="<%= rooms[x].roomNum %>">
									<input type="hidden" name="roomName" class="roomNameFinal" value="<%= rooms[x].roomName %>">
									<input type="hidden" name="maxOccupancy" class="maxOccupancy" value="<%= rooms[x].maxOccupancy %>">
									<input type="hidden" name="numBeds" class="numBeds" value="<%= rooms[x].numBeds %>">
									<input type="hidden" name="description" class="description" value="<%= rooms[x].description %>">
									<input type="hidden" name="image" class="image" value="<%= rooms[x].image %>">
									<input type="hidden" name="price" class="price" value="<%= rooms[x].price %>">
									<button class="bookButton" type="submit">Book</button>
								</form>
							</div>
						<% } } %>
			</div>
		</div>
	</body>
</html>
