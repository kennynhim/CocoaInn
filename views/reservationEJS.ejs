<!doctype html>
<html>
<head>
<meta charset="utf-8">
<title>Reservations</title>
<link href="/public/css.css" rel="stylesheet" type="text/css">
</head>

<body style="background-color: black">
	<div class="reservationsPage">
			<div class="row1" style="color: beige">
				<div class="col-2"><a href="index.html" style="font-size: 35pt; color: beige">Home</a></div>
				<div class="col-2"><a href="Reservation.html" style="font-size: 35pt; color: beige">Reserve</a></div>
				<div class="col-2"><h1 style="text-align: center">Dine</h1></div>
				<div class="col-2"><h1 style="text-align: center">Spa</h1></div>
				<div class="col-2"><h1 style="text-align: center">Golf</h1></div>
				<div class="col-2"><h1 style="text-align: center">Contact</h1></div>
			</div>
		
		<div class="row2" style="color: beige">
			<div class="col-4">
				<form class="reservationInfo" action="Reservation.html" method="post">
					<h2 style="text-align: center; font-size: 30pt">Your Stay</h2>
					<label for="checkIn" style="font-size: 20pt">Check In:</label>
					<br>
					<input class="checkIn" type="date" name="checkIn">
					<br>
					<br>
					<br>
					<br>
					<br>
					<label for="checkOut" style ="font-size:20pt">Check Out:</label>
					<br>
					<input class="checkOut" type="date" name="checkOut">
					<br>
					<br>
					<br>
					<br>
					<br>
					<label for="numRooms" style="font-size:20pt">Rooms:</label>
					<br>
					<input class="numRooms" id="numRoomsID" type="number" placeholder="Number of Rooms" name="numRooms">
					<br>
					<br>
					<br>
					<br>
					<br>
					<label for="numAdults" style="font-size: 20pt">Adults</label>
           			<br>
           			<input class="numAdults" type="number" placeholder="Adults" name ="numAdults">
					<br>
					<br>
					<br>
					<br>
					<br>
					<label for="numChildren">Children</label>
            		<br>
            		<input class="numChildren" type="number" placeholder="Children" name="numChildren">
					<br>
					<br>
					<button class="bookButton" type="submit">Search Rooms</button>
				</form>
			</div>
			
			<div class="col-8" id = "availRoomList">
				<% if (bInit) { %>
					<% for(var x = 0; x < rooms.length; x++) { %>
						<div class="col-5"><br><br><br><br><br><h1 style="text-align: center"><%= rooms[x].roomName %></h1><p style = "text-align:center">Beds: <%= rooms[x].numBeds %><br>Occupancy: <%= rooms[x].maxOccupancy %><br><%= rooms[x].description %></p></div>
						<div class="col-7"><img src="<%= rooms[x].image %>" style="width: 100%; height: auto; margin-left: auto; margin-right: auto; display: block"></div>				
					<% } %>
				<% } else { %>
						<% for(var x = 0; x < rooms.length; x++) { %>
						<div class="col-5"><br><br><br><br><br><h1 style="text-align: center"><%= rooms[x].roomName %></h1><p style = "text-align:center">Beds: <%= rooms[x].numBeds %><br>Occupancy: <%= rooms[x].maxOccupancy %><br><%= rooms[x].description %></p></div>
						<div class="col-5"><img src="<%= rooms[x].image %>" style="width: 100%; height: auto; margin-left: auto; margin-right: auto; display: block"></div>
						<div class="col-2"><br><br><br><br><br><form action="booking.html" method="post"><button class="bookButton" type="submit">Book</button></form></div>
					<% } } %>
			</div>
		</div>
	</div>
</body>
</html>
