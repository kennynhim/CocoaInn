<!doctype html>
<html>
	<head>
		<meta name="viewport" content="width=device-width, initial-scale=1.0" charset="utf-8">
		<title>Cocoa Inn</title>
		<link href="/public/css.css" rel="stylesheet" type="text/css">
	</head>

	<body style="background-color: #E1DFC6">
		<div class="editCancelTimePage">
			<div class="row1">
				<div class="col-2">
					<p style="text-align: center"><b>Employee: <%= userID %></b></p>
				  <div class="col-3"></div>
				  <div class="col-6">
						<form method="post" action="staffHome.html">
							<input type="hidden" name="userID" class="userID" value="<%= userID %>">
							<button type="submit" style="width:100%; text-align: center; padding: 10px">Home</button>
						</form>
					</div>
				  <div class="col-3"></div>
				</div>
				<div class="col-8">
					<h1 style="text-align: center; font-size: 50pt; color: saddlebrown">The Cocoa Inn</h1>
				</div>
				<div class="col-2">
					<div class="col-3"></div>
					<div class="col-6">
						<form method="get" action="logout.html">
							<button type="submit" style="width: 100%; padding: 10px">Logout</button>
						</form>
					</div>
					<div class="col-3"></div>
				</div>
			</div>
			
			<div class="row2">
				<div class="col-12">
					<div class="col-3">
						<div class="col-3"></div>
						<div class="col-6">
							<form method="post" action="editCancelTime.html">
								<input type="hidden" name="userID" class="userID" value="<%= userID %>">
								<button type="submit" style="width:100%; padding:16px">Cancel Time</button>
							</form>
						</div>
						<div class="col-3"></div>
					</div>
					<div class="col-3">
						<div class="col-3"></div>
						<div class="col-6">
							<form method="post" action="editCancelFee.html">
								<input type="hidden" name="userID" class="userID" value="<%= userID %>">
								<button type="submit" style="width:100%; padding:16px">Cancel Fee</button>
							</form>
						</div>
						<div class="col-3"></div>
					</div>
					<div class="col-3">
						<div class="col-3"></div>
						<div class="col-6">
							<form method="post" action="editCheckInTime.html">
								<input type="hidden" name="userID" class="userID" value="<%= userID %>">
								<button type="submit" style="width:100%; padding:16px">Check In Time</button>
							</form>
						</div>
						<div class="col-3"></div>
					</div>
					<div class="col-3">
						<div class="col-3"></div>
						<div class="col-6">
							<form method="post" action="editCheckOutTime.html">
								<input type="hidden" name="userID" class="userID" value="<%= userID %>">
								<button type="submit" style="width:100%; padding:16px">Check Out Time</button>
							</form>
						</div>
						<div class="col-3"></div>
					</div>
				</div>
			</div>
			
			<div class="row3">
				<div class="col-12">
					<div class="col-4"></div>
					<div class="col-4">
						<div class="col-4"></div>
						<div class="col-4">
							<form method="post" action="editCancelTimeRequested.html">
								<label for="cancelTime">Cancel Time (in days)</label>
								<input name="cancelTime" class="cancelTime" type="number" placeholder="<%= policy.cancelTime %>" style="width:100%; padding: 16px; text-align: center" min="0" required>
								<input name="userID" class="userID" type="hidden" value="<%= userID %>">
								<br>
								<br>
								<p style="text-align: center">Note: Modifying the cancel time will take effect immediately.</p>
								<button type="submit" style="width:100%; padding: 16px">Save Changes</button>
							</form>							
						</div>
						<div class="col-4"></div>
					</div>
					<div class="col-4"></div>
				</div>
			</div>
		</div>
	</body>
</html>